@model Mission06_Maat.Models.Movie

<h2>Add a New Movie</h2>

<form asp-action="movieCollection" method="post">

    <!-- CategoryId (Dropdown List) -->
    <!-- Assuming you have a ViewBag or ViewData with category list -->
    <label for="CategoryId">Category</label>
    <select asp-for="CategoryId" asp-items="ViewBag.Categories">
        <option value="">Select a Category</option>
    </select>
    <br />

    <!-- Title -->
    <label asp-for="Title">Title</label>
    <input asp-for="Title" required />
    <br />

    <!-- Year -->
    <label asp-for="Year">Year</label>
    <input asp-for="Year" type="number" required />
    <br />

    <!-- Director -->
    <label asp-for="Director">Director</label>
    <input asp-for="Director" />
    <br />

    <!-- Rating -->
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="">Select a Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <!-- Edited (Checkbox) -->
    <label asp-for="Edited">Edited</label>
    <input asp-for="Edited" type="checkbox" />
    <br />

    <!-- LentTo -->
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br />

    <!-- CopiedToPlex (Checkbox) -->
    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <input asp-for="CopiedToPlex" type="checkbox" />
    <br />

    <!-- Notes -->
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25" />
    <br />

    <button type="submit">Add New Movie</button>
</form>
