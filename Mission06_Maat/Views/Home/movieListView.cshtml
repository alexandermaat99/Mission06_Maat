@model IEnumerable<Mission06_Maat.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h2>Movie List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Movie ID</th>
            <th>Category ID</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.MovieId</td>
                <td>@movie.CategoryId</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@movie.LentTo</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                <td>@movie.Notes</td>
            </tr>
        }
    </tbody>
</table>
